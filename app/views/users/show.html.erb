User Profile: <%= @user.name %>

<% unless current_user == @user %>
	<%= link_to "Add Friend", friendships_path(:friend_id => @user.id), :method => :post %>
<% end %>

<h4>Friends</h4>
<ul>
	<% @user.mutual_friends.each do |friend| %>
		<li>
				<%= friend.name %>, <%= friend.email %>
		</li>
	<% end %>
</ul>