<div class="user-feed">
	<div class="panel panel-default extended" id="post-<%= post.id %>">
	  
	  <div class="panel-body head">
	    <img src="https://scontent.xx.fbcdn.net/hprofile-xfa1/v/t1.0-1/p50x50/1900129_10152208529803896_1607081356_n.jpg?oh=5440437a9cbaa76c1ded11c920c46b72&oe=56DE618C"
	    class="user-thumbnail">
	    <%= link_to post.author.name, post.author, :class => "author-link" %>
	    
	    <div class="time-posted"><%= time_ago_in_words(post.updated_at) %></div>
	  </div>
	  
	  <div class="panel-body content">
	    <%= post.content %>
	  </div>
	  <div class="post-info">
	    <div class="like-count"><%= pluralize(post.likes.count, 'Like') %></div>
	    <div class="comment-count">23 Comments</div>
	  </div>
	  <hr>
    <div class="post-commands">
    	<% if current_user.like?(post) %>
    		<%= link_to like_path(:id => post, :location => @location), :method => :delete do %>
    			<span class="glyphicon glyphicon-thumbs-up like"></span>
   				<div class="command-text like-text">Like</div>
    		<% end %>
    	<% else %>
    		<%= link_to likes_path(:post => post, :location => @location), :method => :post do %>
    			<span class="glyphicon glyphicon-thumbs-up like"></span>
   				<div class="command-text like-text">Like</div>
    		<% end %>
    	<% end %>
				
    	<a href="#">
      	<span class="glyphicon glyphicon-comment comment"></span>
      	<div class="command-text comment-text">Comment</div>
    	</a>
  	</div>
	</div>
	<div class="panel panel-default comments">
  <div class="panel-body">
    <div class="comment-box">
      <img src="https://scontent.xx.fbcdn.net/hprofile-xpf1/v/t1.0-1/p32x32/12376241_10154362743542542_3564387794843871358_n.jpg?oh=0346bb95042e6ad06aba1763ba7eb1fc&amp;oe=571D3F20">
      <div class="comment-form">
        <form class="form-inline">
  			<div class="form-group">
              <textarea class="form-control comment-input" id="exampleTextarea" rows="1" cols="50" placeholder="Write something..."></textarea>
           </div>
  		  <button type="submit" class="btn btn-primary comment-submit">Post</button>
		</form>
      </div>
    </div>
  </div>
</div>
  
</div>
