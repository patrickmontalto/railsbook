<li>
	<%= link_to current_user do %>
		<span class="usr-img"><%= image_tag(current_user.avatar.url(:thumb), size: "20x20") %>
		</span>
		<%= current_user.name %>
	<% end %>
</li>

<li><%= link_to 'Home', root_path, id: "home-link", data: { no_turbolink: true } %></li>
